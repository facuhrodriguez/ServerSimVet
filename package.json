{
  "name": "backend",
  "version": "1.0.0",
  "description": "BackEnd del simulador",
  "main": "server.js",
  "scripts": {
    "build": "tsc && npm run copydotenv",
    "copydotenv": "copyfiles .env dist",
    "postinstall": "npm run build",
    "start": "node --experimental-worker dist/server.js",
    "start:ts": "ts-node ./src/server.ts",
    "start:reload": "ts-node-dev ./src/server.ts",
    "db:create": "ts-node src/database/script/dbCreate.ts",
    "db:sync": "ts-node src/database/script/dbSync.ts",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:createSchema && npm run db:sync",
    "db:drop": "ts-node src/database/script/dbDrop.ts",
    "db:createSchema": "ts-node src/database/script/dbCreateSchema.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:setup:docker": "ts-node src/database/script/dbCreateRole.ts"
  },
  "author": "Facundo Hernán Rodríguez",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^8.5.0",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "copyfiles": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "node-http-error": "^2.0.0",
    "package.json": "^2.0.1",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "properties-reader": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "sequelize": "^6.3.4",
    "tspath": "^1.3.7",
    "typeorm": "^0.2.29",
    "typeorm-pagination": "^2.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/node": "^14.14.9",
    "@types/pg": "^7.14.4",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.57",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "typescript-module-alias": "^1.0.2"
  },
  "_modulesAliases": {
    "@env/*": [
      "src/env/*"
    ],
    "@database/*": [
      "dist/database/*"
    ],
    "@interfaces/*": [
      "dist/interfaces/*"
    ],
    "@models/*": [
      "dist/models/*"
    ],
    "@errors/*": [
      "dist/errors/*"
    ],
    "../controllers/*": [
      "dist/controllers/*"
    ],
    "@middleware/*": [
      "dist/middleware/*"
    ],
    "@routes/*": [
      "dist/routes/*"
    ]
  }
}
