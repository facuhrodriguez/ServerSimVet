{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "strict": false,
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@env/*": [
        "src/env/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      "../controllers/*": [
        "src/controllers/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}