{
  "compilerOptions": {
    "target": "es6",                               
    "module": "commonjs",               
    "sourceMap": true,                                    
    "outDir": "dist",                             
    "rootDir": "./src",                                   
    "strict": true,                               
    "moduleResolution": "node",                  
    "baseUrl": ".",                               
    "esModuleInterop": true,                      
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                         
    "forceConsistentCasingInFileNames": true      
  }
}
