{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist"
   
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "paths": {
    "@env/*": [
      "src/env/*"
    ],
    "@database/*": [
      "src/database/*"
    ],
    "@interfaces/*": [
      "src/interfaces/*"
    ],
    "@entities/*": [
      "src/entities/*"
    ],
    "@errors/*": [
      "src/errors/*"
    ],
    "../controllers/*": [
      "src/controllers/*"
    ],
    "@middleware/*": [
      "src/middleware/*"
    ],
    "@routes/*": [
      "src/routes/*"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}